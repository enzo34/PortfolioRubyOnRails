<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content="<%=@seo_keywords %>" />
    <%= favicon_link_tag 'favicons/favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <% if @page_title == "Rubyx developpement | Portfolio Enzo Clavelloux"%>
          <div class= "background-main"%></div>
          <% else %>
          <div class="background-default" %></div>
          <% end %>
        <div class="cover-container">
          <%= render "shared/application_nav" %>
          <div>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
          </div>
          <%= yield %>
          <%= source_helper("site") %>
          <%= render "shared/application_footer" %>
        </div>

      </div>

    </div>
  </body>
</html>
