<!DOCTYPE html>
<html>
  <head>
    <title>MyTruePortfolioOk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p class="notice"><%= notice %></p>                                                                                               <p class="alert"><%= alert %></p>
      
      <%= link_to "Home", root_path %>
      <%= link_to "Portfolios", portfolios_path %>
      <%= link_to "Blog", blogs_path %>
      <% if current_user %>
        <%= link_to "Deconnecter", destroy_user_session_path, method: :delete %>
        <%= link_to "Editer votre profil", edit_user_registration_path %>
      <% else %>
        <%= link_to "Inscription", new_user_registration_path %>
        <%= link_to "Se connecter", new_user_session_path %>
        
      <% end %>
    <%= yield %>
      <% if session[:source] %>
        <p>Merci de visiter mon site depuis <%= session[:source] %></p>
      <% end %>
  </body>
</html>
