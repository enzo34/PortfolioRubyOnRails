<%= form_with(model: blog) do |f| %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Titre' %> Ce champs est requis
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: "15", placeholder: 'Contenus' %> Ce champs est requis
  </div>

  <div class="form-group">
    <%= f.submit "Valider", class: 'btn btn-primary' %>
  </div>


<% end %>
