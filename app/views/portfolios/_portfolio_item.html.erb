<div class="col-sm-6 col-md-4 ">
  <div class="card w-100" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image.to_s, class: 'img-fluid' unless portfolio_item.thumb_image.nil? %>
    <p class="card-text">
      <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
      <%= portfolio_item.subtitle %>
    </p>
  </div>
</div>
