<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main').to_s, class: 'img-fluid' unless @portfolio_item.main_image.nil? %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <h3>Technologies used</h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Editer le portfolio", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
          <%= link_to "Supprimer le portfolio", portfolio_path(@portfolio_item), method: :delete,  class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>



