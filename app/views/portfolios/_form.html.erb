<%= form_for(@portfolio_item) do |f| %>
  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio_item.errors.count, "erreurs") %> empeche le portfolio d'être sauvegarder</h2>

      <ul>
        <% portfolio_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">

    <div class="col-md-6">

      <div class="form-group">
        <%= f.label :title %>  *
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :subtitle %> *
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-12">

      <div class="form-group">
        <%= f.label :body %> *
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>

    </div>
    <div class="col-md-6">

      <div class="form-group">
        <label class="btn btn-primary">
          Enregistrer une image principal <%= f.file_field :main_image, style: 'display:none' %>
        </label>
      </div>
    </div>
      <div class="form-group">
        <label class="btn btn-primary">
         Choisir une image pour l'apercus <%= f.file_field :thumb_image, style: 'display:none' %>
        </label>
      </div>

    </div>
    <div class="col-md-12">

      <div>
        <h2>Nom des technologies utilisées</h2>
        <div class="form-group">
          <%= f.fields_for :technologies do |technology_form| %>
            <%= render 'technology_fields', f: technology_form %>
          <% end %>
          <div><%= link_to_add_association 'Rajouter une technologie', f, :technologies %></div>
        </div>

        <div class="form-group">
          <%= f.submit "Valider", class: 'btn btn-primary btn-block' %>
        </div>

      </div>

    </div>

        <% end %>
  </div>